<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav>
      <%= link_to "movies gallery", root_path %>
      <div class="login">
        <% if @current_user.present? %>
          <p><%= @current_user.name %></p>
          <p><%= link_to "Sign out", login_path, method: 'delete', class: "login" %></p>
        <% else %>
          <p><%= link_to "Sign in", login_path, class: "login" %></p>
        <% end %>
      </div>
  </nav>
    <%= yield %>
  </body>
</html>
